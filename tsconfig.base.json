{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true
  }
}